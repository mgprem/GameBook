
<html>
<head>
    <title> Games Portal</title>
    <script src="~/lib/js/jquery.min.js"></script>
    <script src="~/lib/js/bootstrap.min.js"></script>
    <script src="~/lib/js/jquery.validate.min.js"></script>
    <script src="~/lib/js/jquery.validate.unobtrusive.min.js"></script>
    <link href="~/lib/css/bootstrap.min.css" rel="stylesheet" />

</head>
    <body>
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                <a class="navbar-brand" href="#">Game Portal</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a asp-controller="Home" asp-action="Index" class="nav-link">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="GameBooks" asp-action="Index" class="nav-link">Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Episodes</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            if(User.IsInRole("Admin"))
                            { 
                            <li class="nav-item">
                                <a class="nav-link" href="#">Store</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Users</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Notifications</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Settings</a>
                            </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link" href="#">Editor</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }


                        @*<li class="nav-item">
            <a class="nav-link" href="#">Welcome Mr./Ms.</a>
        </li>*@
                        <li class="nav-item">
                            <a class="nav-link" href="#">Welcome Mr./Ms. @User.Identity.Name</a>
                        </li>
                    </ul>
                    <form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2" type="text" placeholder="Search">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                    </form>
                </div>
            </nav>
            @*<div class="btn-group-vertical" data-toggle="buttons" >
            <button type="button" class="btn btn-primary active" aria-pressed="true">Home</button>
            <button type="button" class="btn btn-primary">Books</button>
            <button type="button" class="btn btn-primary">Episodes</button>
            <button type="button" class="btn btn-primary">Store</button>
            <button type="button" class="btn btn-primary">Users</button>
            <button type="button" class="btn btn-primary">Notifications</button>
            <button type="button" class="btn btn-primary">Settings</button>
            <button type="button" class="btn btn-primary" >Editor</button>
        </div>*@
        </header>
        <section>

            <div class="col-10">@RenderBody()</div>

        </section>
        <footer>All Rights Reserved WWW.NumbersOnly.Com</footer>
    </body>

</html>

